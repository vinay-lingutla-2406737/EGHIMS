@model IEnumerable<Health_Insurance.Models.Policy>

@{
    ViewData["Title"] = "Policies"; // Changed title for better context
}

<div class="dashboard-header">
    <h1>@ViewData["Title"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-success dashboard-btn-primary">
            <i class="fas fa-plus-circle"></i> Create New Policy
        </a>
    </p>
</div>

<div class="dashboard-card">
    <div class="dashboard-card-header">
        <h2 class="dashboard-card-title">Policy List</h2>
    </div>
    <div class="dashboard-card-body">
        <div class="table-responsive">
            <table class="table table-hover dashboard-table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.PolicyName)</th>
                        <th>@Html.DisplayNameFor(model => model.CoverageAmount)</th>
                        <th>@Html.DisplayNameFor(model => model.PremiumAmount)</th>
                        <th>@Html.DisplayNameFor(model => model.PolicyType)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.PolicyName)</td>
                                <td>@Html.DisplayFor(modelItem => item.CoverageAmount)</td>
                                <td>@Html.DisplayFor(modelItem => item.PremiumAmount)</td>
                                <td>@Html.DisplayFor(modelItem => item.PolicyType)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.PolicyId" class="btn btn-sm btn-outline-info modern-action-btn" title="Edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PolicyId" class="btn btn-sm btn-outline-secondary modern-action-btn" title="Details">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PolicyId" class="btn btn-sm btn-outline-danger modern-action-btn" title="Delete">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No policies found. Click "Create New Policy" to add one.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
}

